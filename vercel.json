{
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 60
    }
  },
  "buildCommand": "cd packages/frontend && pnpm vite build",
  "installCommand": "pnpm install",
  "framework": "vite",
  "outputDirectory": "packages/frontend/dist",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
