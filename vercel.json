{
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 60
    },
    "api/cron/*.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron/fetch-data",
      "schedule": "0 */3 * * *"
    },
    {
      "path": "/api/cron/calculate-kpis",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/cleanup-snapshots",
      "schedule": "0 3 * * 0"
    }
  ],
  "buildCommand": "pnpm run build",
  "installCommand": "pnpm install --frozen-lockfile",
  "framework": "vite",
  "outputDirectory": "packages/frontend/dist",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ]
}
