{
  "buildCommand": "pnpm install && cd packages/frontend && pnpm run build",
  "outputDirectory": "packages/frontend/dist",
  "installCommand": "npm install -g pnpm && pnpm install",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/*.js": {
      "maxDuration": 30,
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "SUPABASE_URL": "@supabase-url",
    "SUPABASE_ANON_KEY": "@supabase-anon-key",
    "TOAST_CLIENT_ID": "@toast-client-id",
    "TOAST_CLIENT_SECRET": "@toast-client-secret",
    "TOAST_LOCATION_ID": "@toast-location-id",
    "ANTHROPIC_API_KEY": "@anthropic-api-key"
  }
}